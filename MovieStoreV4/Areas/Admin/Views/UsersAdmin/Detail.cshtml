@model IEnumerable<MovieStoreV4.Models.tbl_Comment>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Detay</h2>


<table class="table">
    <tr>
        <th>
          Yorumu
        </th>
        <th>
            Yorum Tarihi
        </th>
        <th>
            Filmin Adı
        </th>
        <th>
            Film Resim
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Movie.Title)
        </td>
        <td class="center">
            <img width="150" src="@item.tbl_Movie.Image" />
        </td>

    </tr>
}

</table>
