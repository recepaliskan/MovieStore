@model MovieStoreV4.Models.tbl_Movie

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Film Ekle</h2>

@using (Html.BeginForm("Create", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">


    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="input-group col-md-4">
        <span class="input-group-addon">Kategorisi </span>

        @Html.DropDownListFor(model => model.CategoryID, new SelectList(ViewBag.CategoryID, "ID", "Name"), "Kategori Seçiniz", new { @class = "form-control", required = "required" })

    </div>
    <br />

    <div class="input-group col-md-4">
        <span class="input-group-addon">Film Başlığı </span>

        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Film Başlığı", required = "required" })

    </div>
    <br />
    <div class="input-group col-md-4">
        <span class="input-group-addon">Açıklama </span>

        @Html.TextAreaFor(model => model.Description,3,47,new { htmlAttributes = new { @class = "form-control", placeholder = "Açıklama", maxlength = "150", required = "required" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

    </div>
    <br />

    <div class="input-group col-md-4">

        <span class="input-group-addon">Resim </span>
        @Html.TextBoxFor(model => model.Image, new { @class = "form-control", name = "Image", id = "Image", type = "file", accept = ".jpg, .png,.gif,.JPEG,.jpeg" })


    </div>
    <br />

    <div class="input-group col-md-4">
        <span class="input-group-addon">Fiyatı </span>

        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Fiyat", required = "required" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="input-group col-md-4">
        <span class="input-group-addon">Teaser </span>

        @Html.EditorFor(model => model.Teaser, new { htmlAttributes = new { @class = "form-control", placeholder = "Teaser", required = "required" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="input-group col-md-4">
        <span class="input-group-addon">Video </span>

        @Html.EditorFor(model => model.Video, new { htmlAttributes = new { @class = "form-control", placeholder = "Video", required = "required" } })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Index")
</div>
